# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Blog.all
GET		/blog									Blog.all
GET		/development							Blog.category(categoryId:'1')
GET		/miscellaneous							Blog.category(categoryId:'2')
GET		/category/{categoryId}					Blog.category
GET		/blog/{title}							Blog.showPost
GET		/blog/admin/write						Blog.showWriteForm
POST	/blog/admin/insert						Blog.insert

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
